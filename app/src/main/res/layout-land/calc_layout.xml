<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:foregroundGravity="bottom"
    android:gravity="center|center_horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/geometry" />

    <TextView
        android:id="@+id/resultText"
        style="@style/Theme.Calculator.LinearLayout"
        android:layout_marginTop="@dimen/ButtonMarginTop_10"
        android:background="@color/color_result_text"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="@dimen/TextResultSize"
        android:textStyle="bold" />

    <Space
        android:id="@+id/space_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/land_space_layout" />

    <LinearLayout
        android:id="@+id/row1"
        style="@style/Theme.Calculator.LinearLayout"
        android:layout_below="@+id/space_top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="@dimen/layout_width_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ButtonDefaultMarginLand"
            android:layout_weight="@dimen/weight_1"
            android:text="@string/_1"
            android:textSize="@dimen/ButtonSizeLand"
            android:typeface="sans"
            app:rippleColor="@color/purple_700"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="@dimen/layout_width_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ButtonDefaultMargin"
            android:layout_marginRight="@dimen/ButtonDefaultMargin"
            android:layout_weight="@dimen/weight_1"
            android:text="@string/_2"
            android:textSize="@dimen/ButtonSizeLand"
            android:typeface="sans"
            app:rippleColor="@color/purple_700"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="@dimen/layout_width_0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ButtonDefaultMarginLand"
            android:layout_weight="@dimen/weight_1"
            android:text="@string/_3"
            android:textSize="@dimen/ButtonSizeLand"
            app:rippleColor="@color/purple_700"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        style="@style/Theme.Calculator.LinearLayout"
        android:layout_below="@id/row1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="@dimen/layout_width_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ButtonDefaultMarginLand"
            android:layout_weight="@dimen/weight_1"
            android:text="@string/_4"
            android:textSize="@dimen/ButtonSizeLand"
            app:rippleColor="@color/purple_700"
            android:typeface="sans" />

        <Button
            android:id="@+id/button5"
            android:layout_width="@dimen/layout_width_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ButtonDefaultMargin"
            android:layout_marginRight="@dimen/ButtonDefaultMargin"
            android:layout_weight="@dimen/weight_1"
            android:text="@string/_5"
            android:textSize="@dimen/ButtonSizeLand"
            app:rippleColor="@color/purple_700"
            android:typeface="sans" />

        <Button
            android:id="@+id/button6"
            android:layout_width="@dimen/layout_width_0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ButtonDefaultMarginLand"
            android:layout_weight="@dimen/weight_1"
            android:text="@string/_6"
            android:textSize="@dimen/ButtonSizeLand"
            app:rippleColor="@color/purple_700"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        style="@style/Theme.Calculator.LinearLayout"
        android:layout_below="@id/row2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="@dimen/layout_width_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ButtonDefaultMarginLand"
            android:layout_weight="@dimen/weight_1"
            android:text="@string/_7"
            android:textSize="@dimen/ButtonSizeLand"
            app:rippleColor="@color/purple_700"
            android:typeface="sans" />

        <Button
            android:id="@+id/button8"
            android:layout_width="@dimen/layout_width_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ButtonDefaultMargin"
            android:layout_marginRight="@dimen/ButtonDefaultMargin"
            android:layout_weight="@dimen/weight_1"
            android:text="@string/_8"
            android:textSize="@dimen/ButtonSizeLand"
            app:rippleColor="@color/purple_700"
            android:typeface="sans" />

        <Button
            android:id="@+id/button9"
            android:layout_width="@dimen/layout_width_0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ButtonDefaultMarginLand"
            android:layout_weight="@dimen/weight_1"
            android:text="@string/_9"
            android:textSize="@dimen/ButtonSizeLand"
            app:rippleColor="@color/purple_700"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row4"
        style="@style/Theme.Calculator.LinearLayout"
        android:layout_below="@id/row3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            android:layout_width="@dimen/layout_width_0"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/ButtonDefaultMarginLand"
            android:layout_marginEnd="@dimen/ButtonDefaultMarginLand"
            android:layout_weight="@dimen/weight_1"
            android:text="@string/_0"
            android:textSize="@dimen/ButtonSizeLand"
            app:rippleColor="@color/purple_700"
            android:typeface="sans" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="@dimen/layout_width_0"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/ButtonDefaultMarginLand"
            android:layout_marginEnd="@dimen/ButtonDefaultMarginLand"
            android:layout_weight="@dimen/weight_1"
            android:text="@string/_plus"
            android:textSize="@dimen/ButtonSizeLand"
            app:rippleColor="@color/purple_700"
            android:typeface="sans" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="@dimen/layout_width_0"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/ButtonDefaultMarginLand"
            android:layout_marginEnd="@dimen/ButtonDefaultMarginLand"
            android:layout_weight="@dimen/weight_1"
            android:text="@string/_minus"
            android:textSize="@dimen/ButtonSizeLand"
            app:rippleColor="@color/purple_700"
            android:typeface="sans" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/row5"
        style="@style/Theme.Calculator.LinearLayout"
        android:layout_below="@id/row4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonDev"
            android:layout_width="@dimen/layout_width_0"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/ButtonDefaultMarginLand"
            android:layout_marginEnd="@dimen/ButtonDefaultMarginLand"
            android:layout_weight="@dimen/weight_1"
            android:text="@string/_dev"
            android:textSize="@dimen/ButtonSizeLand"
            app:rippleColor="@color/purple_700"
            android:typeface="sans" />

        <Button
            android:id="@+id/buttonMult"
            android:layout_width="@dimen/layout_width_0"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/ButtonDefaultMarginLand"
            android:layout_marginEnd="@dimen/ButtonDefaultMarginLand"
            android:layout_weight="@dimen/weight_1"
            android:text="@string/_mult"
            android:textSize="@dimen/ButtonSizeLand"
            app:rippleColor="@color/purple_700"
            android:typeface="sans" />

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="@dimen/layout_width_0"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/ButtonDefaultMarginLand"
            android:layout_marginEnd="@dimen/ButtonDefaultMarginLand"
            android:layout_weight="@dimen/weight_1"
            android:text="@string/_equls"
            android:textSize="@dimen/ButtonSizeLand"
            app:rippleColor="@color/purple_700"
            android:typeface="sans" />



</LinearLayout>

</RelativeLayout>