<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:foregroundGravity="bottom"
    android:gravity="center|center_horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/geometry" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@color/color_result_text"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="@dimen/TextResultSize"
        android:textStyle="bold" />

    <Space
        android:id="@+id/space_top"
        android:layout_width="match_parent"
        android:layout_height="120sp" />

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space_top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_weight="1"
            android:text="@string/_1"
            android:textSize="@dimen/ButtonSizeLand"
            android:typeface="sans" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="true"
            android:text="@string/_2"
            android:textSize="@dimen/ButtonSizeLand"
            android:typeface="sans" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5sp"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="true"
            android:text="@string/_3"
            android:textSize="@dimen/ButtonSizeLand"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_weight="1"
            android:text="@string/_4"
            android:textSize="@dimen/ButtonSizeLand"
            android:typeface="sans" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:text="@string/_5"
            android:textSize="@dimen/ButtonSizeLand"
            android:typeface="sans" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5sp"
            android:layout_weight="1"
            android:text="@string/_6"
            android:textSize="@dimen/ButtonSizeLand"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_weight="1"
            android:text="@string/_7"
            android:textSize="@dimen/ButtonSizeLand"
            android:typeface="sans" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:text="@string/_8"
            android:textSize="@dimen/ButtonSizeLand"
            android:typeface="sans" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5sp"
            android:layout_weight="1"
            android:text="@string/_9"
            android:textSize="@dimen/ButtonSizeLand"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_weight="2"
            android:text="@string/_0"
            android:textSize="@dimen/ButtonSizeLand"
            android:typeface="sans" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_weight="2"
            android:text="@string/_plus"
            android:textSize="@dimen/ButtonSizeLand"
            android:typeface="sans" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_weight="2"
            android:text="@string/_minus"
            android:textSize="@dimen/ButtonSizeLand"
            android:typeface="sans" />



    </LinearLayout>

    <LinearLayout
    android:id="@+id/row5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/row4"
    android:orientation="horizontal">

        <Button
            android:id="@+id/buttonDev"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_weight="1"
            android:text="@string/_dev"
            android:textSize="@dimen/ButtonSizeLand"
            android:typeface="sans" />

        <Button
            android:id="@+id/buttonMult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_weight="1"
            android:text="@string/_mult"
            android:textSize="@dimen/ButtonSizeLand"
            android:typeface="sans" />

        <Button
            android:id="@+id/buttonEquals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:layout_weight="1"
            android:text="@string/_equls"
            android:textSize="@dimen/ButtonSizeLand"
            android:typeface="sans" />



</LinearLayout>

</RelativeLayout>